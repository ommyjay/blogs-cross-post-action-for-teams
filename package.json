{
  "name": "team-blogs-cross-post-action",
  "version": "0.0.1",
  "private": true,
  "description": "GitHub action for teams to easily cross-post blog article on dev.to, Hashnode and Medium.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "test-main": "doppler run -- yarn build && yarn test -t 'main'",
    "all": "yarn build && yarn format && yarn lint && yarn package && yarn test",
    "release": ". release.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ommyjay/blogs-cross-post-action-for-teams.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.1",
    "@types/fs-extra": "^9.0.13",
    "axios": "^0.26.1",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.1.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.2.0",
    "@types/node": "^17.0.25",
    "@typescript-eslint/parser": "^5.20.0",
    "@vercel/ncc": "^0.33.3",
    "eslint": "^8.13.0",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^26.8.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "prettier": "2.6.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.4.4"
  }
}
